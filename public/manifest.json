{
  "manifest_version": 3,

  "name": "Marinara: Pomodoro® Assistant",
  "description": "Pomodoro® time management assistant, updated for Manifest V3.",
  "version": "1.0.6",
  "author": "Marinara Development Team",
  "homepage_url": "https://github.com/vintageplayer/marinara",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "action": {
    "default_icon": "images/browser-action.png"
  },

  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "tabs",
    "offscreen"
  ],

  "web_accessible_resources": [{
    "resources": ["phaseComplete.html", "offscreen.html", "images/*", "audio/*"],
    "matches": ["chrome-extension://*/*"]
  }]
}
